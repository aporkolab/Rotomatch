{
  "name": "rotomatch",
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "start:prod": "npx serve -s dist/matching-game-angular",
    "build": "ng build --configuration=production",
    "build:dev": "ng build --configuration=development",
    "build:analyze": "ng build --configuration=production --stats-json && npx webpack-bundle-analyzer dist/matching-game-angular/stats.json",
    "watch": "ng build --watch --configuration=development",
    "test": "ng test",
    "test:ci": "ng test --browsers=ChromeHeadless --watch=false --code-coverage",
    "test:coverage": "ng test --code-coverage",
    "e2e": "ng e2e",
    "lint": "eslint . --ext .ts,.html",
    "lint:fix": "eslint . --ext .ts,.html --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\"",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "audit:security": "npm audit --audit-level=moderate || echo 'Security audit completed with known development-only vulnerabilities'",
    "audit:fix": "npm audit fix",
    "clean": "rimraf dist node_modules/.cache",
    "deploy": "npm run build && npm run start:prod",
    "version:patch": "npm version patch && git push --follow-tags",
    "version:minor": "npm version minor && git push --follow-tags",
    "version:major": "npm version major && git push --follow-tags"
  },
  "private": true,
  "homepage": "https://rotomatch.aporkolab.com",
  "dependencies": {
    "@angular/animations": "^19.2.14",
    "@angular/cli": "^19.2.15",
    "@angular/common": "^19.2.14",
    "@angular/compiler": "^19.2.15",
    "@angular/core": "^19.2.14",
    "@angular/forms": "^19.2.14",
    "@angular/platform-browser": "^19.2.14",
    "@angular/platform-browser-dynamic": "^19.2.14",
    "@angular/router": "^19.2.14",
    "bootstrap": "^5.3.3",
    "fix": "^0.0.6",
    "font-awesome": "^4.7.0",
    "ngx-bootstrap": "^19.0.0",
    "ngx-toastr": "^19.0.0",
    "rxjs": "~7.8.1",
    "serve": "^14.2.0",
    "tslib": "^2.6.3",
    "zone.js": "~0.15.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.15",
    "@angular-eslint/builder": "^20.2.0",
    "@angular-eslint/eslint-plugin": "^20.2.0",
    "@angular-eslint/eslint-plugin-template": "^20.2.0",
    "@angular-eslint/schematics": "^20.2.0",
    "@angular-eslint/template-parser": "^20.2.0",
    "@angular/compiler-cli": "^19.2.14",
    "@angular/language-service": "^19.2.14",
    "@angular/localize": "^19.2.14",
    "@types/jasmine": "^5.1.4",
    "@types/jasminewd2": "^2.0.13",
    "@types/lodash-es": "^4.17.0",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.33.1",
    "@typescript-eslint/utils": "^8.33.1",
    "concurrently": "^8.0.0",
    "cross-env": "^7.0.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^8.0.0",
    "jasmine-core": "~5.2.0",
    "karma": "~6.4.4",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.1",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.0.0",
    "npm-run-all": "^4.1.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "typescript": "~5.8.3",
    "webpack-bundle-analyzer": "^4.9.0"
  },
  "lint-staged": {
    "*.{ts,html}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{scss,css,json,md}": [
      "prettier --write"
    ]
  }
}
